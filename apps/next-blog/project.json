{
  "name": "next-blog",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/next-blog",
  "projectType": "application",
  "targets": {
    "old-build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/next-blog",
        "outputPath": "dist/apps/next-blog"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/next-blog"
        },
        "production": {}
      }
    },

    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "next build apps/next-blog && mv apps/next-blog/.next/static apps/next-blog/.next/standalone/apps/next-blog/.next && cp -r apps/next-blog/public apps/next-blog/.next/standalone/apps/next-blog/.next"
        ],
        "outputPath": "apps/next-blog/.next"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["next dev apps/next-blog -p 4200"]
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "next-blog:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "next-blog:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "next-blog:build:production",
          "dev": false
        }
      }
    },
    "serve-standalone": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["node apps/next-blog/.next/standalone/apps/next-blog/server.js"]
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "next-blog:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/next-blog/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/next-blog/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
