{
  "kind": "collectionType",
  "collectionName": "team_members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Member",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "lastName": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "bio": {
      "type": "customField",
      "options": {
        "preset": "default"
      },
      "required": true,
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "show_pronouns": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "pronouns": {
      "type": "string",
      "regex": "(any|(he|she|they|it|any)(\\/(her?|she|they|him|her|them|its?|any))+)",
      "required": true
    },
    "azureID": {
      "type": "string",
      "unique": true
    },
    "twitter": {
      "type": "string",
      "unique": true,
      "regex": "https:\\/\\/twitter.com\\/.*"
    },
    "github": {
      "type": "string",
      "regex": "https://github.com/.*",
      "unique": true
    },
    "orcid": {
      "type": "string",
      "regex": "https://orcid.org/.*",
      "unique": true
    },
    "personalWebsite": {
      "type": "string"
    },
    "position": {
      "type": "string",
      "required": true
    },
    "department": {
      "type": "enumeration",
      "enum": [
        "Editorial",
        "Board",
        "IT",
        "Design",
        "Outreach",
        "Production"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "lastName"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "linkedin": {
      "type": "string",
      "regex": "https:\\/\\/(www\\.)?linkedin.com\\/in\\/.*"
    },
    "blog_author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog-author.blog-author",
      "inversedBy": "team_members"
    },
    "blog_posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "team_members"
    },
    "summary": {
      "type": "customField",
      "options": {
        "preset": "default",
        "maxLengthCharacters": 400
      },
      "required": true,
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "relatedOpenPositions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::open-position.open-position",
      "inversedBy": "futureCoworkers"
    },
    "color": {
      "type": "customField",
      "customField": "plugin::color-picker.color"
    },
    "mastodon": {
      "type": "string",
      "regex": "https://.*?/@.*"
    },
    "Team": {
      "type": "customField",
      "options": [
        "Developers",
        "Journal",
        "Publishers",
        "Training",
        "Research",
        "Board",
        "Supervisory Board",
        "Operational, Facility, and Support"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "dateJoined": {
      "type": "date"
    },
    "collaborators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::collaborator.collaborator",
      "mappedBy": "teamMembers"
    },
    "bluesky": {
      "type": "string",
      "regex": "https:\\/\\/bsky.app\\/profile\\/.*"
    }
  }
}
